<script>
    function addNumberCreditCard(input, num) {
        input.value += num;
        fcc(input);
    }

    function fcc(input) {
        var input_val = input.value;
        if (input_val === "") { return; }
        if (input_val.length > 19) input_val = input_val.substring(0, 19);

        input_val = formatCreditCardNumber(input_val);
        input.value = input_val;
    }
</script>