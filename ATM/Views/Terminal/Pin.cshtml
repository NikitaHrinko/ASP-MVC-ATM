@model ATM.Models.CreditCard

@{
    ViewData["Title"] = "Pin";
}

<h1>Pin</h1>

<h4>Please input your card PIN-code</h4>
<hr />
<div class="row">
    <div class="col-md-4 margin-top-20"></div>
    <div class="col-md-4 col-md-offset-3 margin-top-20">
        <form asp-action="Pin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pin" class="control-label"></label>
                <input asp-for="Pin" type="password" class="form-control text-center" id="pinInput" data-type="Pin" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Placeholder for numpad</label>
            </div>
            <div class="form-group">
                <input type="submit" value="OK" class="btn btn-primary btn-block" />
            </div>
        </form>
        <div class="form-group btn btn-primary btn-block">Clear</div>
        <a href="Index"><div class="form-group btn btn-primary btn-block">Exit</div></a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
