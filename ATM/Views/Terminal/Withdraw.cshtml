@model ATM.Models.WithdrawalResultViewModel

@{
    ViewData["Title"] = "Withdraw";
}

<h1>Withdraw</h1>

<h4>Please input amount you want to withdraw</h4>
<hr />
<div class="row">
    <div class="col-md-4 margin-top-20"></div>
    <div class="col-md-4">
        <form asp-action="Withdraw">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WithdrawalAmount" class="control-label"></label>
                <input asp-for="WithdrawalAmount" class="form-control" data-type="currency" placeholder="1,000.00" />
                <span asp-validation-for="WithdrawalAmount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="control-label">
                    Placeholder for numpad
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="OK" class="btn btn-primary btn-block" />
            </div>
            <div class="form-group btn btn-primary btn-block">Clear</div>
            <a href="Index"><div class="form-group btn btn-primary btn-block">Exit</div></a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
